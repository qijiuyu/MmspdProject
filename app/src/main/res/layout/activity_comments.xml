<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/black_bank"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户评价"
            android:textColor="@color/color_33333"
            android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_F7F7F7">

        <com.zxdc.utils.library.view.ClickTextView
            android:id="@+id/tv_good_com"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_comment_yes"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="好评（4-5星）"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:gravity="center"/>

        <com.zxdc.utils.library.view.ClickTextView
            android:id="@+id/tv_middle_com"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_comment_no"
            android:layout_centerInParent="true"
            android:text="中评（3星）"
            android:textColor="@color/color_33333"
            android:textSize="13sp"
            android:gravity="center"/>

        <com.zxdc.utils.library.view.ClickTextView
            android:id="@+id/tv_bad_com"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_comment_no"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="差评（1-3星）"
            android:textColor="@color/color_33333"
            android:textSize="13sp"
            android:gravity="center"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
